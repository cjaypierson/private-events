<% provide(:title, "Create Event") %>

<h1>Create Event</h1>

<div class="row">
	<div class="col-sm-offset-3 col-sm-6">
		<%= form_for(@event) do |f| %>
			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :description %>
			<%= f.text_area :description %>

			<%= f.label :location %>
			<%= f.text_field :location %>

			<%= f.label :time %>
			<%= f.datetime_select :time %>

			<%= f.submit "Create Event", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>