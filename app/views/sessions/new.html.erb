<% provide(:title, "Sign In") %>
<h1>Sign In</h1>

<div class="row">
	<div class="col-sm-offset-3 col-sm-6">
		<%= form_tag sessions_path do %>

			<%= label_tag :email %>
			<%= text_field_tag :email %>

			<%= label_tag :password %>
			<%= password_field_tag :password %>

			<%= submit_tag "Log In", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>